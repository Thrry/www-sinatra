<% content_for(:title) do %>
  Le Wagon - <%= t "apply.title" %>
<% end %>
<% content_for(:description) do %>
  <%= t "apply.description" %>
<% end %>

<div id="postulate-banner" class="sub-banner text-center">
  <div class="filter">
    <div class="row">
      <div class="col-xs-12 center">
        <h1><%= t "apply.title" %></h1>
        <div class="vertical-spacer"></div>
        <ul class="list-inline">
          <li>html & css<img src="<%= image_path 'icons/html.png' %>" alt="html"></li>
          <li>ruby & Rails<img src="<%= image_path 'icons/ruby.png' %>" alt="ruby"></li>
          <li>javascript<img src="<%= image_path 'icons/js.png' %>" alt="js"></li>
          <li>git & Github <img src="<%= image_path 'icons/git.png' %>" alt="git"></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div id="goal">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= t "apply.lead" %>
      </div>
    </div>
  </div>
</div>

<form action="/apply" method="POST">

  <input type="text" name="first_name" placeholder="John">
  <input type="text" name="last_name" placeholder="Doe">
  <input type="text" name="age" placeholder="42">
  <input type="email" name="email" placeholder="john@doe.org">

  <div class="input-group">
    <select name="camp">
      <% CAMPS.each do |slug, camp| %>
        <option value="<%= slug %>">
          <%= camp[:city].capitalize %>, du <%= l camp[:start_date], format: :long %> au <%= l camp[:end_date], format: :long %>
        </option>
      <% end %>
    </select>
  </div>

  <textarea name="motivation" rows="8"></textarea>

  <button class="btn btn-primary">POSTULER</button>
</form>

<div class="vertical-spacer"></div>

<div class="container">
  <%= erb :testimonials %>
</div>

<div class="vertical-spacer"></div>
