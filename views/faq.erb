<% content_for(:title) do %>
  Le Wagon - FAQ
<% end %>

<div class="vertical-spacer"></div>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="faq">
        <h1 class="text-center">FAQ</h1>

        <div class="text-right">
          <% if I18n.locale == :fr %>
            <a href="/en/faq">Read the FAQ in English</a>
          <% else %>
            <a href="/faq">Lisez la FAQ en fran√ßais</a>
          <% end %>
        </div>

        <% FAQS[I18n.locale].each do |faq| %>
          <article>
            <h2><%= faq[:question] %></h2>
            <p><%= faq[:answer] %></p>
          </article>
        <% end %>

        <%= t "faq.footer" %>
        <a href="mailto:contact@lewagon.org">contact@lewagon.org</a>
      </div>
    </div>
  </div>
</div>

<% if I18n.locale == :fr %>
  <div class="vertical-spacer"></div>

  <div class="container text-center">
    <%= erb :testimonials %>
  </div>
<% end %>

<div class="vertical-spacer"></div>

<%= erb :apply, locals: { no_faq: true } %>