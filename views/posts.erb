<% @posts.each_with_index do |post, index| %>
  <div class="col-lg-4 col-sm-6 js-post">
    <article class="postcard">
      <% if post.metadata[:thumbnail] %>
        <a href="/blog/<%= post.slug %>" class="link-img" style="background-image: url('<%= asset_path "blog/#{post.metadata[:thumbnail]}" %>')">
        </a>
      <% end %>
      <div class="content">
        <h2>
          <a href="/blog/<%= post.slug %>">
            <%= post.metadata[:title] %>
          </a>
        </h2>
        <% if post.metadata[:description] %>
          <p class="description"><%= post.metadata[:description] %></p>
        <% end %>
      </div>
      <a href="/blog/<%= post.slug %>" class="link-post"><i class="fa fa-search"></i>  <%= t "blog.read_article" %></a>
      <div class="infos">
        <% if post.metadata[:author] %>
          <p>
            <%= t "blog.written",
              href: "https://twitter.com/#{AUTHORS[post.metadata[:author].to_sym][:twitter]}",
              author: AUTHORS[post.metadata[:author].to_sym][:name],
              date: l(post.date, format: :short)
            %>
          </p>
        <% end %>
      </div>
    </article>
  </div>
  <%# if (index + 1) % 3 == 0 %>
    <!-- <div class="clearfix visible-lg-block"></div> -->
  <%# end %>
  <%# if (index + 1) % 2 == 0 %>
    <!-- <div class="clearfix visible-sm-block visible-md-block"></div> -->
  <%# end %>
<% end %>
