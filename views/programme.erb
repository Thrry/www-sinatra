<% content_for(:title) do %>
  Le Wagon - <%= t "program.title" %>
<% end %>
<% content_for(:description) do %>
  <%= t "program.description" %>
<% end %>

<div id="program-banner" class="sub-banner text-center">
  <div class="filter">
    <div class="row">
      <div class="col-xs-12 center">
        <h1><%= t "program.teaser" %></h1>
        <div class="vertical-spacer"></div>
        <ul class="list-inline">
          <li>html & css<img src="<%= image_path 'icons/html.png' %>" alt="html"></li>
          <li>ruby & Rails<img src="<%= image_path 'icons/ruby.png' %>" alt="ruby"></li>
          <li>javascript<img src="<%= image_path 'icons/js.png' %>" alt="js"></li>
          <li>git & Github <img src="<%= image_path 'icons/git.png' %>" alt="git"></li>
        </ul>
      </div>
    </div>
  </div>
</div>


<div id="program-keys">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h2><%= t "program.our_goal" %></h2>
        <p><%= t "program.our_goal_detailed" %></p>

        <ul>
          <li>
            <%= t "program.be_a_great_entreprener" %>
          </li>
          <br/>
          <li>
            <%= t "program.find_a_job" %>
          </li>
        </ul>

      </div>
      <div class="col-sm-6">
        <img src="<%= image_path 'pictures/live-code-group.jpg' %>" alt="Live Code Group">
      </div>
    </div>

    <div class="vertical-spacer"></div>

    <div class="row">
      <div class="col-sm-6">
        <img src="<%= image_path 'pictures/live-code.jpg' %>" alt="Live Code Retro">
      </div>
      <div class="col-sm-6">
        <h2><%= t "program.why" %></h2>
        <p>
          <%= t "program.rationale" %>
        </p>
      </div>
    </div>

    <div class="vertical-spacer"></div>

    <div class="row">
      <div class="col-sm-6">
        <h2><%= t "program.join_the_community" %></h2>
        <p><%= t "program.le_wagon_community" %></p>
      </div>
      <div class="col-sm-6">
        <img src="<%= image_path 'pictures/masterclass.jpg' %>" alt="Apero Talk">
      </div>
    </div>

    <div class="vertical-spacer"></div>

    <div class="row">
      <div class="col-sm-6">
        <img src="<%= image_path 'pictures/yoga.jpg' %>" alt="Yoga">
      </div>
      <div class="col-sm-6">
        <h2><%= t "program.the_spirit" %></h2>
        <p><%= t "program.le_wagon_spirit" %></p>
      </div>
    </div>
  </div>
</div>

<%= erb :apply %>

<div id="daily-schedule" class="text-center">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <h2><%= t "program.typical_day_upcase" %></h2>
        <table>
          <tr>
            <td>
              <img src="<%= image_path 'icons/live-code.png' %>">
            </td>
            <td>
              <p><strong>9h</strong> - <%= t "program.nine_o_clock" %></p>
            </td>
          </tr>
          <tr>
            <td>
              <img src="<%= image_path 'icons/pair-programming.png' %>">
            </td>
            <td>
              <p><strong>10h - 12h30</strong> - <%= t "program.ten_o_clock" %></p>
            </td>
          </tr>
          <tr>
            <td>
              <img src="<%= image_path 'icons/lunch.png' %>">
            </td>
            <td>
              <p><strong>12h30 - 14h</strong> - <%= t "program.twelve_o_clock" %></p>
            </td>
          </tr>
          <tr>
            <td>
              <img src="<%= image_path 'icons/pair-programming.png' %>">
            </td>
            <td>
              <p><strong>14h - 17h30</strong> - <%= t "program.two_o_clock" %></p>
            </td>
          </tr>
          <tr>
            <td>
              <img src="<%= image_path 'icons/apero.png' %>">
            </td>
            <td>
              <p><strong>19h</strong> - <%= t "program.seven_o_clock" %></p>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<div id="weekly-schedule" class="text-center">
  <div class="container">
    <h2><%= t "program.by_week_upcase" %></h2>
    <br/>
    <div class="row text-center">
      <div class="col-xs-6 col-sm-4 col-md-2">
        <div class="number">1-2</div>
        <p><%= t "program.ruby_week" %></p>
      </div>
      <div class="col-xs-6 col-sm-4 col-md-2">
        <div class="number">3</div>
        <p><%= t "program.oop_week" %></p>
      </div>
      <div class="col-xs-6 col-sm-4 col-md-2">
        <div class="number">4</div>
        <p><%= t "program.sql_week" %></p>
      </div>
      <div class="col-xs-6 col-sm-4 col-md-2">
        <div class="number">5</div>
        <p><%= t "program.frontend_week" %></p>
      </div>
      <div class="col-xs-6 col-sm-4 col-md-2">
        <div class="number">6-7</div>
        <p><%= t "program.rails_week" %></p>
      </div>
      <div class="col-xs-6 col-sm-4 col-md-2">
        <div class="number">8-9</div>
        <p><%= t "program.projects_week" %></p>
      </div>
    </div>
    <div class="vertical-spacer"></div>
    <div class="row">
      <div class="col-sm-2 col-sm-offset-2">
        <div id="last" class="number"><strong>1-9</strong></div>
      </div>
      <div class="col-sm-6">
        <p class="text-justify"><strong>Best practices</strong> - <%= t "program.best_practices" %></p>
      </div>
    </div>
  </div>
</div>
