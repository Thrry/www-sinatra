<div class="col-xs-12 col-sm-6 col-md-3 text-center">
  <div class="panel-booster">
    <!-- 3D ribbon for 1st offer -->
    <% if booster[:card][:focus] %>
      <div class="ribbon ribbon-red" >
        <div class="banner">
            <div class="text"><%= booster[:card][:ribbon] %></div>
        </div>
      </div>
    <% end %>
    <div class="round-icon <%= booster[:card][:class] %> brandon-medium">
      <%= booster[:card][:badge_name] %>
    </div>
    <ul>
      <li><%= booster[:card][:focus_one] %></li>
      <li><%= booster[:card][:focus_two] %></li>
      <li><%= booster[:card][:focus_three] %></li>
    </ul>
    <p><strong><%= booster[:card][:level] %></strong></p>

    <% if booster[:launched] %>
      <a href="/programme/<%= booster[:slug] %>" class="btn btn-default yellow">
        more details
      </a>
      <!--span to make panel clickable-->
      <a href="/programme/<%= booster[:slug] %>"><span class="click-panel"></span></a>
    <% else %>
      <a data-target="#boosterModal" data-toggle="modal" class="btn btn-default white">
        i'm interested
      </a>
      <!--span to make panel clickable-->
      <a data-target="#boosterModal" data-toggle="modal"><span class="click-panel"></span></a>
    <% end %>
  </div>
</div>


<!-- Booster Modal -->
<div class="modal fade" id="boosterModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h3 class="modal-title" id="myModalLabel">
          Pré-inscription "<%= booster[:name]%>"
        </h3>
      </div>
      <div class="modal-body text-center" style="padding-top: 30px;padding-bottom: 50px;">
        <!-- TODO: link the form to Trello -->
        <p>Le programme est <strong>limité à 10 inscrits</strong>.</p>
        <p>N'hésite pas à nous laisser ton mail si tu es intéressé !</p>
        <br>
        <form action="#" class="form-inline">
          <input type="email" class="form-control" placeholder="john.doe@gmail.com">
          <input type="submit" value="je suis intéressé" class="btn btn-primary">
        </form>
      </div>
    </div>
  </div>
</div>


