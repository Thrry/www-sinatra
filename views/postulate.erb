<% content_for(:title) do %>
  Le Wagon - Postuler
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Postuler</h1>
      <% SESSIONS.each do |city_slug, sessions| %>
        <% sessions.each do |session| %>
          <ul>
            <li>Ville : <%= CITIES[city_slug.to_sym][:name] %></li>
            <li>Départ : <%= session[:start_at] %></li>
            <li>Départ : <%= session[:end_at] %></li>
            <li>
              <a href="/postuler/<%= session[:city_slug] %>">
                Postuler
              </a>
            </li>
          </ul>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
